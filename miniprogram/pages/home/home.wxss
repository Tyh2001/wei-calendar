/* 页脚 */
.f-calendar-footer {
  width: 96%;
  margin: 0 auto;
  margin-top: 20px;
  background: #fff;
  padding: 7px;
  box-sizing: border-box;
  border-radius: 14px;
  box-shadow: 0 0 15px rgba(0, 0, 0, .1);
}

.f-calendar-footer .f-calendar-footer-list {
  list-style: none;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: center;
}

.f-calendar-footer .f-calendar-footer-list li {
  display: inline-block;
  width: 45%;
  font-size: 15px;
  color: #333;
}